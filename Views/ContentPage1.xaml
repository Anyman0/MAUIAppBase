<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage x:Class="MAUIAppBase.Views.ContentPage1"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MAUIAppBase.Views">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Example Name: " HorizontalOptions="Start" TextColor="Black" FontSize="Medium"></Label>
            <Entry Text="{Binding Name}"></Entry>
            <Label Text="Example ID: " HorizontalOptions="Start" TextColor="Black" FontSize="Medium"></Label>
            <Entry Text="{Binding Id}" HorizontalOptions="Start" TextColor="Black" FontSize="Medium"></Entry>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>